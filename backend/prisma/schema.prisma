generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sites     Site[]
}

model Site {
  id        Int      @id @default(autoincrement())
  nome      String
  dominio   String?
  usuarioId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  paginas   Pagina[]
}

model Layout {
  id           Int           @id @default(autoincrement())
  nome         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  componentes  Componente[]  @relation("LayoutComponentes")
  paginas      Pagina[]
}

model Pagina {
  id          Int          @id @default(autoincrement())
  titulo      String
  endereco    String
  siteId      Int?
  layoutId    Int?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  site         Site?          @relation(fields: [siteId], references: [id])
  layout       Layout?       @relation(fields: [layoutId], references: [id])
  componentesComPagina PaginaComponente[]
}

enum TipoComponente {
  TITULO
  TEXTO
  IMAGEM
  TITULO_TEXTO
  TITULO_IMAGEM
  TEXTO_IMAGEM
  TITULO_TEXTO_IMAGEM
  FOOTER
  NAVBAR
  CONTATO
}

model Componente {
  id             Int       @id @default(autoincrement())
  nome           String
  tipo           TipoComponente
  configuracoes  Json?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  paginasComponente PaginaComponente[]
  layouts Layout[] @relation("LayoutComponentes")
}

model PaginaComponente {
  id            Int         @id @default(autoincrement())
  paginaId      Int
  componenteId  Int
  ordem         Int

  pagina        Pagina      @relation(fields: [paginaId], references: [id])
  componente    Componente  @relation(fields: [componenteId], references: [id])

  @@unique([paginaId, ordem])
  @@unique([paginaId, componenteId])
}
